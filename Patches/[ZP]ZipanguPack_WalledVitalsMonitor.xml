      <li>【ZP】Zipangu pack</li>
    </mods>
    <match Class="PatchOperationFindMod">
      <mods>
        <li>[sd] medicaddons</li>
      </mods>
      <match Class="PatchOperationSequence">
        <success>Always</success>
        <operations>
          <li Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName = "StrawBed"]/comps/li[@Class = "CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
