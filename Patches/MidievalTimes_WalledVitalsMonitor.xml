<?xml version="1.0" encoding="UTF-8"?>
<Patch>
  <!--Allow Medieval Times beds to use Wall Vitals Monitor-->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Medieval Times</li>
    </mods>
    <match Class="PatchOperationSequence">
      <success>Always</success>
      <operations>
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName = "MedTimes_Cot"]/comps/li[@Class = "CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
          <value>
            <li>WalledVitalsMonitor</li>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName = "MedTimes_CotDouble"]/comps/li[@Class = "CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
          <value>
            <li>WalledVitalsMonitor</li>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
  <!--======================================IF Medieval Times AND sdMedicAddons are installed, add walled spacer vitals monitor to beds===============-->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Medieval Times</li>
    </mods>
    <match Class="PatchOperationFindMod">
      <mods>
        <li>[sd] medicaddons</li>
      </mods>
      <match Class="PatchOperationSequence">
        <success>Always</success>
        <operations>
          <li Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName = "MedTimes_Cot"]/comps/li[@Class = "CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
            <value>
              <li>WalledVitalsMonitorSpacer</li>
            </value>
          </li>
          <li Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName = "MedTimes_CotDouble"]/comps/li[@Class = "CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
            <value>
              <li>WalledVitalsMonitorSpacer</li>
            </value>
          </li>
        </operations>
      </match>
    </match>
  </Operation>
</Patch>
