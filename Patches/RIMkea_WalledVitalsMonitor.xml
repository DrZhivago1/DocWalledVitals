              <xpath>Defs/ThingDef[defName="SNORHOI"]/comps</xpath>
              <value>
                <li Class="CompProperties_AffectedByFacilities">
                  <linkableFacilities>
                    <li>WalledVitalsMonitorSpacer</li>
