            <value>
              <li>WalledVitalsMonitorSpacer</li>
            </value>
          </li>
          <li Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName = "SLABNEPPDouble"]/comps/li[@Class = "CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
